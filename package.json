    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "lint-staged": "^12.4.1",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.6.2",
    "react-refresh": "^0.13.0",
    "react-test-renderer": "^18.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  },
  "build": {
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "guid": "1d33e340-5a31-4349-bca4-21116daa7b32",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "allowElevation": true
    },
    "extraResources": [
      "7za.exe",
      "hdiffz.exe"
    ],
    "appId": "com.diego-soft.HeroicGameLauncher",
    "productName": "HeroicGameLauncher",
    "publish": [
      {
        "provider": "github",
        "owner": "HeroicGameLauncher",
        "repo": "HeroicGameLauncher"
      }
    ],
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "verifyUpdateCodeSignature": false,
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "extends": null
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/*"
    ],
    "logLevel": "quiet"
  }
}
